@model FoodFinder.Web.Model.Comment


<article class="blog-post">
    <div class="h3 ">@Model.Title<div class="details pull-right"><small>@Model.Created.ToString("D") by @Model.CreatedBy</small></div></div>

	<div class="content">@Model.Details</div>
	<div>@if (@Model.Likes != 0) 
		{
		 @Model.Likes
		} else {
		    <button>Like</button>
		}
	</div>
</article>